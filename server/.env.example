# =============================================================================
# MERN DASHBOARD SERVER ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and update the values for your environment

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mern-dashboard

# Authentication Secrets (GENERATE STRONG SECRETS FOR PRODUCTION!)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# Example: oPTNosK+QbGWBWX5EdQSYaFjKTMRR1X1a9sAZYTl29g=
JWT_SECRET=your-super-secret-jwt-key-here-generate-random-string
SESSION_SECRET=your-super-secret-session-key-here-generate-random-string
JWT_EXPIRE=24h

# Google OAuth Configuration (Optional - leave empty to disable)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Security Configuration
BCRYPT_SALT_ROUNDS=12
